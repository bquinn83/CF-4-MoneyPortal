@using MoneyPortal.ViewModels
@using System.Globalization

@model HouseholdStatisticsVM

<div class="row">
    <div class="col-md-3 col-sm-6">
        <div class="statistic-block block">
            <div class="progress-detailsalign-items-end justify-content-between">
                <div class="title d-flex">
                    <div class="icon"><i class="fas fa-lg fa-money-bill-alt"></i></div>
                    <div class="words">Total Balance</div>
                </div>
                <div class="number dashtext-g">@Model.TotalBalance.ToString("c")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="statistic-block block">
            <div class="progress-details align-items-end justify-content-between">
                <div class="title d-flex">
                    <div class="icon"><i class="fas fa-lg fa-list-ol"></i></div>
                    <div class="words">Total Budget</div>
                </div>
                <div class="number dashtext-y">@Model.TotalBudget.ToString("c")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="statistic-block block">
            <div class="progress-details align-items-end justify-content-between">
                <div class="title d-inline-flex">
                    <div class="icon"><i class="fas fa-lg fa-hand-holding-usd"></i></div>
                    <div class="words">Monthly Spending</div>
                </div>
                <div class="number dashtext-r">@Model.CurrentSpending.ToString("c")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="statistic-block block">
            <div class="progress-details align-items-end justify-content-between">
                <div class="title d-inline-flex">
                    <div class="icon"><i class="fas fa-lg fa-wallet"></i></div>
                    <div class="words">Monthly Deposits</div>
                </div>
                <div class="number dashtext-g">@Model.CurrentDeposits.ToString("c")</div>
            </div>
        </div>
    </div>
</div>